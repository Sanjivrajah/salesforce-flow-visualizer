{
  "name": "salesforce-flow-visualizer",
  "displayName": "Salesforce Flow Visualizer",
  "description": "Visualize Salesforce Flow metadata files as interactive diagrams with detailed element information",
  "version": "1.0.0",
  "publisher": "sanjivrajah",
  "author": {
    "name": "sanjivrajah"
  },
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#00A1E0",
    "theme": "dark"
  },
  "keywords": [
    "salesforce",
    "flow",
    "visualizer",
    "diagram",
    "flow-builder"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sanjivrajah/salesforce-flow-visualizer"
  },
  "bugs": {
    "url": "https://github.com/sanjivrajah/salesforce-flow-visualizer/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sfdc-flow-viz.visualize",
        "title": "Visualize Flow",
        "icon": "$(type-hierarchy-sub)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "sfdc-flow-viz.visualize",
          "when": "resourceFilename =~ /\\.flow-meta\\.xml$/",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "sfdc-flow-viz.visualize",
          "when": "resourceFilename =~ /\\.flow-meta\\.xml$/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/dagre": "^0.7.52",
    "@types/node": "20.x",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "dagre": "^0.8.5",
    "fast-xml-parser": "^4.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactflow": "^11.10.4"
  }
}
